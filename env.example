# Defifa Environment Variables
# Copy this file to .env and fill in the actual values

# Base URL for the application (used for ENS resolution API)
# This should be your deployed application URL or localhost for development
NEXT_PUBLIC_BASE_URL=http://localhost:3000/

# IPFS Configuration (Infura)
# Get these from your Infura IPFS project dashboard
# NOTE: NEXT_PUBLIC_ prefix exposes these to the browser - use for dev/testing only
NEXT_PUBLIC_IPFS_PROJECT_ID=your_infura_project_id_here
NEXT_PUBLIC_IPFS_PROJECT_SECRET=your_infura_project_secret_here

# Optional: Custom IPFS gateway hostname (defaults to ipfs.infura.io)
# NEXT_PUBLIC_IPFS_GATEWAY_HOST=ipfs.infura.io

# Optional: Custom IPFS gateway port (defaults to 5001)
# NEXT_PUBLIC_IPFS_GATEWAY_PORT=5001

# Optional: Custom IPFS gateway protocol (defaults to https)
# NEXT_PUBLIC_IPFS_GATEWAY_PROTOCOL=https

# WalletConnect Project ID (required for wallet connections)
# Get this from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here
